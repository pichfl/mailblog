{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "formatter": {
    "ignore": ["package-lock.yaml", "package.json", "node_modules/", "out/"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "single"
    }
  }
}
